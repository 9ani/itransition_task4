<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header.ejs') %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Register</title>
</head>
<body class="bg-light"> 
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card p-4 w-50"> 
            <h3 class="mb-4 text-center">Register</h3> 
            <form action="/api/signup" method="POST">
                <h3>Register</h3>
                <div id="error-message" class="alert alert-danger d-none"></div> <!-- Hidden error message area -->
                
                <div class="mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Enter email" required>
                </div>
                
                <div class="mb-3">
                    <input type="text" name="full_name" class="form-control" placeholder="Enter full name" required>
                </div>
                
                <div class="mb-3">
                    <input type="password" name="password" class="form-control" placeholder="Enter password" required>
                </div>
                
                <div class="mb-3">
                    <input type="password" name="re_password" class="form-control" placeholder="Confirm password" required>
                </div>
                
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            
            
            
        </div>
    </div>
    <script>
        // Display error message from query parameter if present
        function displayErrorMessage() {
            const urlParams = new URLSearchParams(window.location.search);
            const errorMessage = urlParams.get('error');
            if (errorMessage) {
                const errorDiv = document.getElementById('error-message');
                errorDiv.textContent = errorMessage;
                errorDiv.classList.remove('d-none'); // Show the error message
            }
        }
        
        displayErrorMessage();
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-muNm/B4SA+GTSNc/8KoZWbg/3UHsAJ/p8PWra5rDgMGzMxRRyKp69qZBjsb92a+A" crossorigin="anonymous"></script>
</body>
</html>
